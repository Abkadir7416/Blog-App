<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Document</title>
</head>

<body>
    
<div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>
        <% articles.forEach( article => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-tittle">
                        <%= article.title %>
                    </h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= article.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="cart-text mb-2">
                        <%= article.description %>
                    </div>
                    <a class="btn btn-primary " href="articles/<%= article.id %>">Read More</a>
                    <a class="btn btn-info " href="articles/edit/<%= article.id %>">Edit</a>
                    <form class="d-inline" action="/articles/<%= article.id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger " type="submit">Delete</button>
                    </form>

                </div>
            </div>
            <% }) %>

            
    </div>


</body>

</html>